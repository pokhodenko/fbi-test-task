{% extends 'layout.tpl.twig' %}

{% block content %}
    <h1>Employee</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employee.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ employee.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ employee.lastName }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ employee.gender }}</td>
            </tr>
            <tr>
                <th>Dateofbirth</th>
                <td>{% if employee.dateOfBirth %}{{ employee.dateOfBirth|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ employee.comment }}</td>
            </tr>
            <tr>
                <th>Salary</th>
                <td>{{ employee.salary }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        <div class="btn-group">
            <a class="btn btn-primary" href="{{ path('employee_index') }}">Back to the list</a>
            <a class="btn btn-info" href="{{ path('employee_edit', { 'id': employee.id }) }}">Edit</a>
        </div>
        <div class="pull-right">
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </div>
    </div>

{% endblock %}
