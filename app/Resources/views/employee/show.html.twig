{% extends 'layout.tpl.twig' %}

{% block content %}
    <h1>Employee</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employee.id }}</td>
            </tr>
            <tr>
                <th>First name</th>
                <td>{{ employee.firstName }}</td>
            </tr>
            <tr>
                <th>Last name</th>
                <td>{{ employee.lastName }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ employee.gender }}</td>
            </tr>
            <tr>
                <th>Date of birth</th>
                <td>{% if employee.dateOfBirth %}{{ employee.dateOfBirth|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>
                    <ul>
                        {% for address in employee.addresses %}
                            <li>{{ address.address }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>
                    <ul>
                        {% for phone in employee.phones %}
                            <li>{{ phone.phone }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ employee.comment }}</td>
            </tr>
            <tr>
                <th>Salary</th>
                <td>{{ employee.salary }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ employee.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        <div class="btn-group">
            <a class="btn btn-primary" href="{{ path('employee_index') }}">Back to the list</a>
            <a class="btn btn-info" href="{{ path('employee_edit', { 'id': employee.id }) }}">Edit</a>
        </div>
        <div class="pull-right">
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </div>
    </div>

{% endblock %}
